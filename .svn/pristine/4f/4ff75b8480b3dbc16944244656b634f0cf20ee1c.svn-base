<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    
    <FrameLayout android:layout_width="match_parent" 
        android:layout_height="match_parent" 
        android:gravity="center" 
        android:orientation="vertical" 
        android:background="@color/light_gray" 
        android:paddingTop="0dp" 
        android:id="@+id/list_main">
        
        <LinearLayout android:id="@+id/fragment_container"
            android:orientation="horizontal" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" />
    </FrameLayout>
    
    <RelativeLayout 
        android:layout_width="130dp" 
        android:layout_height="match_parent" 
        android:paddingTop="20dp"
        android:layout_gravity="end" 
        android:background="#3c6082"
        android:id="@+id/drawer_list">
        
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            
        <LinearLayout 
        	android:id="@+id/container_my_work" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp" 
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/my_work" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/my_work" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true" 
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>    
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_current" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/current" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/current_stories" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>        
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_backlog" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/backlog" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/backlog" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>                
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_icebox" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/icebox" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/icebox" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>                
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_done" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/done" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/done" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>                
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_epics" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/epics" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/epics" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>                
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_labels" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/labels" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/labels" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>                
        </LinearLayout>
        

        <LinearLayout 
        	android:id="@+id/container_charts" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/charts" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/charts" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>                
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_project_history" 
            android:layout_width="match_parent" 
            android:layout_height="50dp"
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView 
            	android:id="@+id/project_history" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/project_history" 
                android:textSize="14sp" 
                android:layout_marginTop="5dp"
                android:textColor="#fff" />
            <TextView          
       			android:id="@+id/divider"
        		android:layout_width="fill_parent" 
        		android:layout_height="1.5dp"
        		android:background="#ccc" 
        		android:layout_marginTop="10dp"
    		/>                
        </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/container_logout" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:gravity="center" 
            android:clickable="true" 
            >
            <ImageView 
            	android:id="@+id/ico_logout" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" 
                android:src="@drawable/menusignout_xhdpi" 
            />
            <TextView 
            	android:id="@+id/logout" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Sign Out" 
                android:textSize="14sp" 
                android:textColor="#fff" 
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/ico_logout"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>