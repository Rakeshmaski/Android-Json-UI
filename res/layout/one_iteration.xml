<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
	android:paddingTop="0dp"
    android:paddingBottom="5dp"
    android:clickable="true"
    android:background="#fff">
    <TextView          
        android:id="@+id/divider_start"
        android:layout_width="fill_parent" 
        android:layout_height="1.5sp" 
        android:background="#ececec" 
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/c">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/label_iteration"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/iteration"
            	android:textColor="#444"
            	android:textSize="15sp"
            	android:layout_marginRight="5dp"
            />
        	<TextView
            	android:id="@+id/iteration_number"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text=""
            	android:textColor="#444"
            	android:textSize="15sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/label_start"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/start_date"
            	android:textColor="#555"
            	android:textSize="13sp"
            	android:layout_marginRight="5dp"
            />
        	<TextView
            	android:id="@+id/start"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text=""
            	android:textColor="#555"
            	android:textSize="13sp"
            />
        </LinearLayout>    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/label_end"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/end_date"
            	android:textColor="#555"
            	android:textSize="13sp"
            	android:layout_marginRight="5dp"
            />
        	<TextView
            	android:id="@+id/end"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text=""
            	android:textColor="#555"
            	android:textSize="13sp"
            />
        </LinearLayout>   
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/label_team_strength"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/team_strength"
            	android:textColor="#555"
            	android:textSize="13sp"
            	android:layout_marginRight="5dp"
            />
        	<TextView
            	android:id="@+id/team_strength"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text=""
            	android:textColor="#555"
            	android:textSize="13sp"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>    